@model List<ContactoModel>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
  <div class="card-header">
    Lista Empleados
  </div>
  <div class="card-body">
   
       <a asp-action="Guardar" asp-controller="Mantenedor" class="btn btn-success" ><i class="bi bi-terminal-plus"></i>Crear Nuevo</a>
       <hr/>
       <table class="table table-bordered">
           <thead>
               <tr>
                   <th>Nombre</th>
                   <th>Primer Apellido</th>
                   <th>Segundo Apellido</th>
                   <th>Edad</th>
                   <th>Fecha de Nacimiento</th>
                   <th>Genero</th>
                   <th>Telefóno</th>
                   <th>Dirección</th>
                   <th>Correo Electrónico</th>
                   <th>Fecha de Ingreso</th>
                   <th>Departamento</th>
                   <th></th>
               </tr>
           </thead>
           <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.PrimerApellido</td>
                        <td>@item.SegundoApellido</td>
                        <td>@item.Edad</td>
                        <td>@item.FechaNacimiento</td>
                        <td>@item.Genero</td>
                        <td>@item.Telefono</td>
                        <td>@item.Direccion</td>
                        <td>@item.CorreoElectronico
                        <td>@item.FechaIngreso</td>
                        <td>@item.Departamento</td>
                        <td>
                            <a asp-action="Editar" asp-controller="Mantenedor" class="btn btn-primary btn-sm" asp-route-ID = "@item.ID" ><i class="bi bi-pencil-square"></i>Editar</a>
                            <a asp-action="Eliminar" asp-controller="Mantenedor" class="btn btn-danger btn-sm" asp-route-ID = "@item.ID" ><i class="bi bi-trash3"></i>Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
       </table>
 

  </div>
</div>

